<Window x:Class="UploadSelectionToImgur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UploadSelectionToImgur"
        Title="SelectionToImgur" WindowStyle="None" AllowsTransparency="True" Background="Black" Opacity="0.1">
    <Canvas x:Name="Canvas" DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType=local:MainWindow}}">
        <Rectangle
            Fill="White"
            Canvas.Left="{Binding SelectionLeft}"
            Canvas.Top="{Binding SelectionTop}"
            Width="{Binding SelectionWidth}"
            Height="{Binding SelectionHeight}" />
    </Canvas>
</Window>